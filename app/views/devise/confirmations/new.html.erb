<!-- app/views/devise/sessions/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-lg rounded-2xl p-8">
      <h1 class="text-2xl font-semibold text-gray-900 mb-6">Sign in</h1>

      <%= form_with(model: resource,
                    as: resource_name,
                    url: session_path(resource_name),
                    class: "space-y-5") do |f| %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "block w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?",
                          new_password_path(resource_name),
                          class: "text-sm text-indigo-600 hover:text-indigo-500" %>
            <% end %>
          </div>
          <%= f.password_field :password,
                               autocomplete: "current-password",
                               class: "block w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in",
                       class: "w-full inline-flex justify-center rounded-lg bg-indigo-600 px-4 py-2.5 text-white font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
      <% end %>

      <% if devise_mapping.registerable? %>
        <p class="mt-6 text-center text-sm text-gray-600">
          Donâ€™t have an account?
          <%= link_to "Sign up", new_registration_path(resource_name),
                      class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
